        Utility:Create("UIStroke", {
            Color = self.Theme.Accent,
            Thickness = 1,
            Transparency = 0.8,
            ApplyStrokeMode = Enum.ApplyStrokeMode.Border,
            Parent = window.TabsFrame
        })
    end
    
    -- ScrollFrame para tabs mejorado
